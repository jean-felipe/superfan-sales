<!DOCTYPE html>
<html>
  <head>
    <title>Super Fan | Sales</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/6b3c680981.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'superfan' %>
    <%= javascript_pack_tag 'superfan', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <div class="actions">
        <%= link_to(destroy_user_session_path, method: :delete, class: 'button is-danger') do %>
            <span class="icon">
                <i class="fas fa-sign-in-alt"></i>
            </span>
          <span>Sair</span>
        <% end %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
